@model AniStoreV2.Models.GameSearch

@{
    ViewBag.Title = "Поиск";
}

<div style="margin-left: 25px;">
    <form method="get">
        <div style="display: inline-block; width: 200px;">
            <label>Поиск</label>
            @Html.DropDownList("genre", Model.Genres as SelectList, htmlAttributes: new { @class = "form-control" })
        </div>
        <div style="display: inline-block;">
            <input type="submit" value="Найти" class="button" />
        </div>
    </form>

    <hr />

    <table>
        <tr>
            <th>Новость </th>
            <th>Автор </th>
            <th>Цена </th>
            <th>Описание </th>
            <th>Фото </th>
            <th>Жанр</th>
        </tr>
        @foreach (var item in Model.Games)
        {
    <tr>
        <td>@Html.DisplayFor(m => item.Name)</td>
        <td>@Html.DisplayFor(m => item.Author)</td>
        <td>@Html.DisplayFor(m => item.Price)</td>
        <td>@Html.DisplayFor(m => item.Description)</td>
        <td><img src="~/Images/Games/@Html.DisplayFor(m => item.Photo)" alt=" " /></td>
        <td>@Html.DisplayFor(m => item.GenreID)</td>
    </tr>
        }
    </table>
</div>
<br />

